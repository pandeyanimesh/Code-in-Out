#include<iostream>
#include<bits/stdc++.h>
#include<math.h>
#define ll long long int
using namespace std;
int main()
{ll n,k;
cin>>n>>k;
ll m;
if(n%2==0)
  {if(k<=n/2)
     { m=2*k-1;
       cout<<m<<"\n";
     }
   else
      {m=2*(k-(n/2));
      cout<<m<<"\n";
       }
    }
else
    {if(k<=n/2+1)
       {m=2*k-1;
        cout<<m<<"\n";
         
       }
      else
         {m=2*(k-(n/2)-1);
         cout<<m<<"\n";
           
         }
      
    }
    
}
